{
  "languageserver": {
    "graphql": {
      "command": "graphql-lsp",
      "args": ["server", "-m", "stream"],
      // customize filetypes to your needs
      "filetypes": ["typescript", "typescriptreact", "graphql"]
    },
    "cssmodules": {
      "command": "cssmodules-language-server",
      "initializationOptions": { "camelCase": "dashes" },
      "filetypes": [
        "javascript",
        "javascriptreact",
        "typescript",
        "typescriptreact"
      ],
      "requireRootPattern": 0,
      "settings": {}
    }
  }
}
